{
  "name": "gw-market",
  "version": "0.1.0",
  "description": "Marketplace for Guild Wars 1",
  "author": "Eta <eta92@hotmail.fr>",
  "scripts": {
    "debug": "nodemon --exec \"node --inspect-brk=0.0.0.0:9229 --require ts-node/register app.ts\"",
    "start": "nodemon app.ts",
    "export": "mongoexport --host=\"localhost\" --port=27017 --db=HIDDEN --collection=players --out=players.json",
    "generate-history": "ts-node scripts/generate-history.ts",
    "emit-orders": "ts-node scripts/socket-order-emitter.ts"
  },
  "nodemonConfig": {
    "watch": [
      "app.ts",
      "src",
      "data"
    ],
    "ignore": [
      "client/*",
      "node_modules"
    ],
    "ext": "ts,js,json",
    "exec": "ts-node app.ts"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 140
  },
  "dependencies": {
    "axios": "1.3.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "flexsearch": "^0.8.212",
    "geoip-lite": "1.4.7",
    "helmet": "^8.0.0",
    "mongodb": "5.3.0",
    "nanoid": "3.3.11",
    "node-fetch": "3.3.1",
    "socket.io": "4.6.1",
    "socket.io-client": "4.6.1"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/node": "18.15.11",
    "nodemon": "2.0.22",
    "ts-node": "10.9.2",
    "typescript": "5.0.4"
  }
}
